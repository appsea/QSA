<Page
        class="page"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <!--
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!--
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Summary"/>
    </ActionBar>

    <ScrollView class="input-field page page-login" horizontalAlignment="center" width="100%"
                backgroundImage="res://mesh">
        <StackLayout orientation="vertical">
            <StackLayout backgroundColor="white" margin="10">
                <Label class="h3 text-center p-10 progress-heading" text="Question Bank"
                       textWrap="true"/>
                <Progress value="20" width="80%" loaded="onProgressLoaded"
                          color="blue" class="m-t-15"/>
                <Label class="attempted m-10" color="blue" horizontalAlignment="center">
                    <label.formattedText>
                        <formattedString>
                            <formattedString.spans>
                                <span text="100" class="attempted"/>
                                <span text=" of " class="total"/>
                                <span text="150" class="total"/>
                                <span text=" Accessible" class="total"/>
                            </formattedString.spans>
                        </formattedString>
                    </label.formattedText>
                </Label>
                <StackLayout class="hr-light"/>
                <StackLayout orientation="horizontal" horizontalAlignment="center" class="m-5">
                    <Button class="btn btn-primary btn-rounded-sm fa" text="&#xf43f;  Premium"
                            tap="{{ onButtonTap }}" width="45%"/>
                    <Button class="btn btn-primary btn-rounded-sm fa" text="&#xf03d;  Free +10"
                            tap="{{ onButtonTap }}" width="45%"/>
                </StackLayout>
            </StackLayout>
            <StackLayout backgroundColor="white" margin="10">
                <Label class="h3 text-center p-10 progress-heading" text="Practice Stats"
                       textWrap="true"/>
                <Progress value="20" width="80%" loaded="onProgressLoaded"
                          color="blue" class="m-t-15"/>

                <Label class="attempted m-10" horizontalAlignment="center">
                    <label.formattedText>
                        <formattedString>
                            <formattedString.spans>
                                <span text="142" class="attempted"/>
                                <span text=" of " class="total"/>
                                <span text="200" class="total"/>
                                <span text=" Questions" class="total"/>
                            </formattedString.spans>
                        </formattedString>
                    </label.formattedText>
                </Label>
                <StackLayout class="hr-light"/>
                <GridLayout columns="*,auto, *" rows="auto, auto" backgroundColor="white">
                    <FlexboxLayout row="0" col="0" flexDirection="column"
                                   style="padding: 15 10" horizontalAlignment="center">
                        <Label text="94%" class="attempted" horizontalAlignment="right"/>
                        <Label text="Complete" class="type"
                               horizontalAlignment="center"/>
                    </FlexboxLayout>
                    <Label class="v-line" row="0" col="1"/>
                    <FlexboxLayout row="0" col="2" flexDirection="column"
                                   style="padding: 15 10" horizontalAlignment="center">
                        <Label text="82%" class="attempted"/>
                        <Label text="Accuracy" class="type"
                               horizontalAlignment="center"/>
                    </FlexboxLayout>
                </GridLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>